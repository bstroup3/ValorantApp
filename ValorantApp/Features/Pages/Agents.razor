@page "/agents"
@using ValorantApp.Features.Pages;
@using ValorantApp.Features.Pages.Components.AgentCard;
@if (_isLoading)
{
    <MudSkeleton />
    <MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="20vw" Height="20vw" />
}
else
{
    <MudContainer>
    <MudItem>
        <MudText Typo="Typo.h5">Agents</MudText>
    </MudItem>
    <MudGrid>
        @foreach (var agent in @_response.Agents)
            {
                <AgentCard Name="@agent.DisplayName" PictureUri="@agent.DisplayIcon.AbsoluteUri" />
            }
        </MudGrid>

    </MudContainer>
}