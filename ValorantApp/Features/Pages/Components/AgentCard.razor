@namespace ValorantApp.Features.Pages.Components.AgentCard

<MudContainer Class="card" Style="height: 25vw; width: 25vw;">
    <MudPaper Class="d-flex justify-center flex-column align-center">
        <MudImage Src="@PictureUri" Style="height: 20vw; width: 20vw;" />
        <MudText Typo="Typo.h6">@Name</MudText>
    </MudPaper>
</MudContainer>

@code
{
    [Parameter] public string PictureUri { get; set; } = null!;
    [Parameter] public string Name { get; set; } = null!;
}