@namespace ValorantApp.Features.Pages.Components.AgentCard

<MudContainer Class="card" Style="height: 25vw; width: 25vw;">
    <MudPaper>
        <MudImage Src="@picturePath" Style="height: 20vw; width: 20vw;" />
        <MudPaper Class="d-flex justify-center align-center" Style="margin: 1vw; transform: skew(-40deg);">
            <MudText Typo="Typo.h6" Style="transform: skew(40deg);">@Name</MudText>
        </MudPaper>
    </MudPaper>
</MudContainer>

@code
{
    [Parameter] public string Id { get; set; }
    [Parameter] public string Name { get; set; }

    public string picturePath => $"Characters/{@Id}.png";
}