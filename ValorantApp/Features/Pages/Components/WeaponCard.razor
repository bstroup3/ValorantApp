@namespace ValorantApp.Features.Pages.Components.WeaponCard

<MudContainer Class="card">
    <MudPaper Class="d-flex justify-center flex-column align-center">
        <MudImage Src="@PictureUri" Style="height:3vw; width: auto; margin-top: 1vw;" />
        <MudText Typo="Typo.h6">@Name</MudText>
    </MudPaper>
</MudContainer>

@code
{
    [Parameter] public string PictureUri { get; set; } = null!;
    [Parameter] public string Name { get; set; } = null!;
}